[init]
	defaultBranch = master

[user]
	email = orleanski@gmail.com
	name = Dmitri
[color]
	ui = auto
	diff = auto
	status = always
	branch = always
	interactive = always
[core]
	exludesfile = ${XDG_CONFIG_HOME}/git/gitignore
	pager = less -RS
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
	conflictstyle = diff3

[difftool]
	prompt = false

[alias] ;{{{
    ; metadata
	aliases = !git config --list | grep ^alias\\. | cut -c 7- | grep -Ei --color \"$1\" "#"

	; show me the url
	url = config --get remote.origin.url

	; short notation status
	st = status -sb

	; commit w/ message
	cm = commit -m

	; Push changes to upstream can be 'master' in the place of 'HEAD'
	done = !git push origin HEAD

	; pretty logs
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
;}}}
